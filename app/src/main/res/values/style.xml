<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LogInTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/splashback</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/afsemibold</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Add any other text-related attributes as needed -->
    </style>

    <style name="LoginSignUpIconStyle">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">Icon</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="SignUpTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/splashFontColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/afsemibold</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Add any other text-related attributes as needed -->
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WrapContentStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/afmedium</item>
        <item name="android:textSize">22dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">143dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginStart">118dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:fontFamily">@font/afbold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/palepink</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:layout_width">143dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginStart">68dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/signup_button</item>
        <item name="android:fontFamily">@font/afbold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/splashback</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<style name="LogInEditTextStyle">
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/splashback</item>
        <item name="android:fontFamily">@font/afregular</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">20dp</item>
    <item name="android:textColorHint">@color/splashback</item>
    </style>

    <style name="SignUpEditTextStyle">
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/rounded_corner_2</item>
        <item name="android:textColor">@color/palepink</item>
        <item name="android:fontFamily">@font/afregular</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColorHint">@color/palepink</item>
    </style>






</resources>
